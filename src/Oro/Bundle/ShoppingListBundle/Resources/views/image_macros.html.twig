{% macro url(file, filter) -%}
    {% import _self as imageMacros %}

    {%- if file is not null %}
        {{- filtered_image_url(file, filter) -}}
    {% else %}
        {{- imageMacros.urlFromString('', filter) -}}
    {% endif %}
{%- endmacro -%}

{% macro image(file, filter, alt) -%}
    {% import _self as imageMacros %}

    <img src="{{ imageMacros.url(file, filter) }}" title="{{ oro_file_title(file) }}" alt="{{ alt }}" />
{%- endmacro -%}
