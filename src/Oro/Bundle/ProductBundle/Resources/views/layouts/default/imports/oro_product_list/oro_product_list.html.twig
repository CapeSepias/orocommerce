{% block __oro_product_list__products_widget %}
    {% set attr = layout_attr_defaults(attr, {
        '~class': ' embedded-products',
        'data-page-component-module': 'oroui/js/app/components/view-component',
        '~data-page-component-options': {
            view: 'orofrontend/default/js/app/views/footer-align-view',
            elements: {
                items: '.embedded-list__item',
                footer: '.product-item__qty'
            }
        }
    }) %}

    <div {{ block('block_attributes') }}>
        {{ block_widget(block) }}
    </div>
{% endblock %}

{% block __oro_product_list__product_widget %}
    {% set attr = layout_attr_defaults(attr, {
        '~class': ' product-item embedded-product',
    }) %}

    {{ block_widget(block, {attr: attr}) }}
{% endblock %}
