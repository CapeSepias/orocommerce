{% set sliderOptions = {
    slidesToShow: 1,
    autoplay: true,
    autoplaySpeed: 4000,
    arrows: false,
    dots: true,
    itemSelector: '.promo-slider__item'
} %}
<div class="promo-slider"
     data-page-component-name="promo-slider"
     data-page-component-module="orofrontend/js/app/components/list-slider-component"
     data-page-component-options="{{ sliderOptions|json_encode }}">
    {% for imageSlide in imageSlides %}
        {% set windowTarget = imageSlide.displayInSameWindow ? '_self' : '_blank' %}
        <div class="promo-slider__item">
            <a href="{{ imageSlide.url }}" target="{{ windowTarget }}">
                <div class="promo-slider__picture">
                    <picture>
                        <source srcset="{{ imageSlide.smallImage ? filtered_image_url(imageSlide.smallImage, 'original') : filtered_image_url(imageSlide.mainImage, 'max_width_414') }}"
                                media="(max-width: 414px)">
                        <source srcset="{{ imageSlide.mediumImage ? filtered_image_url(imageSlide.mediumImage, 'original') : filtered_image_url(imageSlide.mainImage, 'max_width_992') }}"
                                media="(max-width: 992px)">
                        <img src="{{ filtered_image_url(imageSlide.mainImage, 'original') }}"
                             class="promo-slider__img"
                             alt="{{ imageSlide.title }}">
                    </picture>
                </div>
            </a>
            <div class="promo-slider__info promo-slider__info--{{ imageSlide.textAlignment }}-mode">
                <a href="{{ imageSlide.url }}" target="{{ windowTarget }}" class="promo-slider__link">
                    <h2 class="promo-slider__title">{{ imageSlide.title }}</h2>
                    <div class="promo-slider__description">{{ imageSlide.text|raw }}</div>
                </a>
                <a href="{{ imageSlide.url }}" target="{{ windowTarget }}" class="btn btn--info promo-slider__view-btn">
                    Call to action
                </a>
            </div>
        </div>
    {% endfor %}
</div>
