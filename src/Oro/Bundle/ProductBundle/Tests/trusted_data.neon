# This is is adidtional configuration for phpstan rules, see https://github.com/oroinc/phpstan-rules/blob/master/README.md
trusted_data:
    variables:
        Oro\Bundle\ProductBundle\Model\ProductVisibilityQueryBuilderModifier:
            addWhereInExpr:
                rootAlias: true
                field: true
        Oro\Bundle\ProductBundle\EventListener\ProductVisibilityRestrictionList:
            applyQueryRestrictions:
